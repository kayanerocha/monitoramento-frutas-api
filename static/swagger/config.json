{
  "openapi": "3.0.3",
  "info": {
    "title": "Monitoramento de Frutas API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:80"
    },
    {
      "url": "https://monitoramentofrutas.pythonanywhere.com"
    }
  ],
  "tags": [
    {
      "name": "usuario",
      "description": "CRUD Operations"
    }
  ],
  "paths": {
    "/usuarios": {
      "get": {
        "tags": [
          "usuario"
        ],
        "summary": "Retorna todos os usuarios",
        "responses": {
          "200": {
            "description": "Sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Usuario"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Usuario": {
        "type": "object",
        "properties": {
          "id": {
            "type": "int",
            "example": 1
          },
          "nome": {
            "type": "string",
            "example": "Kayane"
          },
          "matricula": {
            "type": "string",
            "example": "G305353"
          },
          "email": {
            "type": "string",
            "example": "kayanerocha.ti@gmail.com"
          },
          "loja": {
            "type": "string",
            "example": "Dia"
          },
          "tipo_usuario": {
            "type": "string",
            "example": "Repositor",
            "options": [
              "Administrador",
              "Gerente",
              "Repositor"
            ]
          }
        }
      }
    }
  }
}